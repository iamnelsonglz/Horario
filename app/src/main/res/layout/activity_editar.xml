<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditarActivity"
    android:orientation="vertical"
    android:layout_margin="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar registro de horas"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/mfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"/>
    <EditText
        android:id="@+id/txtModFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="date"
        android:labelFor="@+id/mfecha"
        android:enabled="false"/>
    <TextView
        android:id="@+id/mentrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de entrada:"/>
    <EditText
        android:id="@+id/txtModEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="time"
        android:labelFor="@+id/mentrada" />
    <TextView
        android:id="@+id/msalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de salida:"/>
    <EditText
        android:id="@+id/txtModSalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="time"
        android:labelFor="@+id/msalida" />
        <Button
            android:id="@+id/btnMod"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Guardar modificaciÃ³n"
            android:onClick="funEditar"/>
        <Button
            android:id="@+id/btnDel"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Borrar"
            android:onClick="funEliminar"/>
</LinearLayout>